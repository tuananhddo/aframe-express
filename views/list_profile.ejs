<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Danh sách triển lãm ảo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</head>
<body style="height: 100%">
<div class="container-fluid">
    <div class="row" style="height: 100px">
        <p class="col-10 text-center mt-4" style="font-size: 30px">Danh sách profile triển lãm ảo</p>
        <div class="col-1 dropdown show mt-4 ml-4 ">
            <a class="btn btn-sm btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Tài khoản <b><%= user.username %></b>
            </a>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="/logout">Đăng xuất</a>
                <button class="dropdown-item" data-toggle="modal" data-target="#createModal">Thêm triển lãm</button>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-12">
            <table class="table table-striped table-bordered">
                <thead>
                <tr class="d-flex">
                    <th class="col-sm-1">STT</th>
                    <th class="col-sm-4">Tên triển lãm ảo</th>
                    <th class="col-sm-4">Mô tả</th>
                    <th class="col-sm-3">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i < listProfile.length; i++){ %>
                    <tr class="d-flex" id=<%= 'exhibitionRow' + listProfile[i].id %>>
                        <td class="col-sm-1"><%= i + 1 %></td>
                        <td class="col-sm-4">
                            <a href=<%= '/profile/' + listProfile[i].name %>  target="_blank"
                            >
                                <%= listProfile[i].name %>
                            </a>
                        </td>
                        <td class="col-sm-4"><%= listProfile[i].description %></td>
                        <td class="col-sm-3">
                            <button type="button" class="btn btn-outline-success"
                                    onclick=<%= 'deleteProfile(' + listProfile[i].id + ')' %>>Xóa
                            </button>
                            <a href=<%= '/profile/' + listProfile[i].name %>  target="_blank"
                               class="btn btn-outline-primary" role="button">
                                Truy cập
                            </a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>

        </div>

    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm mới triển lãm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id='infoAlert' class="alert alert-warning" role="alert" style="display: none">
                    Vui lòng nhập đủ thông tin
                </div>
                <div class="input-group mb-3">
                    <input id='profileNameCreate' type="text" class="form-control" placeholder="Tên triển lãm"
                           aria-label=""
                           aria-describedby="basic-addon1">
                </div>

                <div class="input-group mb-3">
                    <input id='profileDesCreate' type="text" class="form-control" placeholder="Mô tả"
                           aria-label="Recipient's username" aria-describedby="basic-addon2">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="sendRQ()">Thêm mới</button>
            </div>
        </div>
    </div>

</div>
<script>
    const BASE_URL = window.location.protocol + "//" + window.location.host;
    const CREATE_PROFILE_URL = BASE_URL + '/profile/create/';
    const DELETE_PROFILE_URL = BASE_URL + '/profile/delete/';

    async function postData(url = '', data = {}) {
        // Default options are marked with *
        const response = await fetch(url, {
            method: 'POST', // *GET, POST, PUT, DELETE, etc.
            // mode: 'cors', // no-cors, *cors, same-origin
            // cache: 'no-cache', // *default, no-cache, reload, force-cache, only-if-cached
            // credentials: 'same-origin', // include, *same-origin, omit
            headers: {
                'Content-Type': 'application/json'
                // 'Content-Type': 'application/x-www-form-urlencoded',
            },
            redirect: 'follow', // manual, *follow, error
            referrerPolicy: 'no-referrer', // no-referrer, *no-referrer-when-downgrade, origin, origin-when-cross-origin, same-origin, strict-origin, strict-origin-when-cross-origin, unsafe-url
            body: JSON.stringify(data) // body data type must match "Content-Type" header
        });
        return response.json(); // parses JSON response into native JavaScript objects
    }


    function deleteProfile(id) {
        if (confirm("Xác nhận xóa triển lãm ?")) {
            console.log(id)
        }
        postData(DELETE_PROFILE_URL, {id: id})
            .then(data => {
                if (data == 320) {
                    console.log('Error')
                }else {

                }
                console.log(data); // JSON data parsed by `data.json()` call
            });

    }


    function sendRQ() {
        let name = document.getElementById('profileNameCreate').value
        let des = document.getElementById('profileDesCreate').value
        if (!name || !des) {
            document.getElementById('infoAlert').style.display = 'block'
            setTimeout(() => {
                document.getElementById('infoAlert').style.display = 'none'
            }, 4000)
        } else {
            document.getElementById('infoAlert').style.display = 'none'
        }
        postData(CREATE_PROFILE_URL, {name: name, description: des})
            .then(data => {
                if (data == 320) {
                    console.log('Create Error')
                }
                console.log(data); // JSON data parsed by `data.json()` call
            });
        $('#createModal').modal('hide')
    }
</script>
</body>
</html>
